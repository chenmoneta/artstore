<%= simple_form_for @product, :url => admin_product_path do |f| %>
  <%= f.input :title, label: '標題' %>
  <%= f.input :description, as: :text , label: '描述' %>
  <%= f.input :quantity, label: '數量' %>
  <%= f.input :price, label: '價格' %>
  <%= f.input :image, as: :file , label: '圖片' %>
  <%= f.button :submit %>
<% end %>


